<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_horizontal|center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp20"
        android:paddingRight="@dimen/dp20" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/dp13" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择付款方式"
                android:textColor="#ff000000"
                android:textSize="@dimen/sp15" />

            <RadioGroup
                android:id="@+id/rg_pay_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:id="@+id/rb_scan_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/btn_radio_type"
                    android:paddingLeft="@dimen/dp20"
                    android:text="商家扫描顾客手机付款码"
                    android:textColor="@color/black" />

                <RadioButton
                    android:id="@+id/rb_scan_pos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp13"
                    android:button="@drawable/btn_radio_type"
                    android:paddingLeft="@dimen/dp20"
                    android:text="顾客扫描商家设备上的订单二维码"
                    android:textColor="@color/black" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/dp13" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="默认摄像头"
                android:textColor="#ff000000"
                android:textSize="@dimen/sp15" />

            <RadioGroup
                android:id="@+id/rg_scanner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:id="@+id/rb_front_scanner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/btn_radio_type"
                    android:paddingLeft="@dimen/dp20"
                    android:text="前置摄像头"
                    android:textColor="@color/black" />

                <RadioButton
                    android:id="@+id/rb_back_scanner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp13"
                    android:button="@drawable/btn_radio_type"
                    android:paddingLeft="@dimen/dp20"
                    android:text="后置摄像头"
                    android:textColor="@color/black" />
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>