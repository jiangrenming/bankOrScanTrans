<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:ll="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/print_set_bank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="打印纸质单据"
            android:textColor="@color/balck_333333"
            android:textSize="@dimen/pub_text_size_large"/>

        <View

            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="6dp"
            android:background="@color/bgColor_divier"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp13"
            android:layout_marginTop="@dimen/dp10"
            android:gravity="bottom"
            android:text="二维码收款"
            android:textColor="@color/black"
            android:textSize="@dimen/dp17"/>
        <RadioGroup
            android:id="@+id/rg_scan_print"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dp20"
            android:paddingLeft="@dimen/dp13"
            android:paddingTop="@dimen/dp13">

            <RadioButton
                android:id="@+id/rb_scan_print_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@drawable/btn_radio_type"
                android:paddingLeft="@dimen/dp20"
                android:text="一联(商户联)"
                android:textColor="@color/black"/>

            <RadioButton
                android:id="@+id/rb_scan_print_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_weight="1"
                android:button="@drawable/btn_radio_type"
                android:paddingLeft="@dimen/dp20"
                android:text="两联"
                android:textColor="@color/black"/>
        </RadioGroup>

        <TextView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:text="纸质单据字体大小"
            android:textColor="@color/balck_333333"
            android:textSize="@dimen/dp17"/>

        <View
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="6dp"
            android:background="@color/bgColor_divier"/>

        <RadioGroup
            android:visibility="gone"
            android:id="@+id/rg_font_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dp20"
            android:paddingLeft="@dimen/dp13"
            android:paddingTop="@dimen/dp13">

            <RadioButton
                android:id="@+id/rb_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@drawable/btn_radio_type"
                android:paddingLeft="@dimen/dp20"
                android:text="小"
                android:textColor="@color/black"/>

            <RadioButton
                android:id="@+id/rb_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_weight="1"
                android:button="@drawable/btn_radio_type"
                android:paddingLeft="@dimen/dp20"
                android:text="中"
                android:textColor="@color/black"/>

            <RadioButton
                android:id="@+id/rb_big"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_weight="1"
                android:button="@drawable/btn_radio_type"
                android:paddingLeft="@dimen/dp20"
                android:text="大"
                android:textColor="@color/black"/>
        </RadioGroup>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:visibility="gone"
            android:id="@+id/btn_print_test"
            style="@style/but01_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/btn_string_print_test"/>

        <Button
            android:id="@+id/btn_save_change"
            style="@style/but01_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/btn_text_save_modify"/>
    </LinearLayout>

</RelativeLayout>
