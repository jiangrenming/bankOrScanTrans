<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout 
       android:layout_width="fill_parent"
       android:layout_height="54dp" >
        <TextView 
            style="@style/black_333333_16_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="收单" />
    </RelativeLayout>
    <ImageView 
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/gray_d0d0d0" />
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <LinearLayout 
            android:id="@+id/main_consume_ll"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginLeft="40dp"
            android:orientation="vertical" >
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/menu_consume_btn" />
            <TextView 
                style="@style/black_333333_16_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="消费"/>
        </LinearLayout>
        <LinearLayout 
            android:id="@+id/main_wx_scan_ll"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="40dp"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/menu_saomazhifu_bg_style"
                android:id="@+id/imageView" />

            <TextView
                style="@style/black_333333_16_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="扫码支付"/>
        </LinearLayout>
    </LinearLayout>
    
    <ImageView 
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/gray_d0d0d0" />
    <com.nld.cloudpos.payment.view.MyViewPager
        android:id="@+id/main_pager" 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1" />
    <LinearLayout 
        android:id="@+id/main_dot"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="20dp"
        android:gravity="center" >
    </LinearLayout>
    
</LinearLayout>
