<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/top_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:text="商户号："
            android:textColor="#232323"
            android:textSize="18sp" />

        <com.nld.cloudpos.payment.view.MEditText
            android:id="@+id/shanghuhao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:enabled="false"
            android:gravity="right"
            android:singleLine="true"
            android:textColor="#232323" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="8dp"
            android:text="银行终端号："
            android:textColor="#232323"
            android:textSize="18sp" />

        <com.nld.cloudpos.payment.view.MEditText
            android:id="@+id/zhongduanhao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:enabled="false"
            android:gravity="right"
            android:singleLine="true"
            android:textColor="#232323" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="8dp"
            android:text="微信终端号："
            android:textColor="#232323"
            android:textSize="18sp" />

        <com.nld.cloudpos.payment.view.MEditText
            android:id="@+id/weixingzhongduanhao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:enabled="false"
            android:gravity="right"
            android:singleLine="true"
            android:textColor="#232323" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="8dp"
            android:text="证书密码："
            android:textColor="#232323"
            android:textSize="18sp" />

        <com.nld.cloudpos.payment.view.MEditText
            android:id="@+id/zhengshupassword"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:maxLength="6"
            android:singleLine="true"
            android:textColor="#232323" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center" >

        <Button
            android:id="@+id/confirm_but"
            android:layout_width="317.33dp"
            android:layout_height="46.67dp"
            android:background="@drawable/blue_btn_bg"
            android:text="确定"
            android:textColor="#ffffff" />
    </LinearLayout>

</LinearLayout>