<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/ll_root"
                android:layout_width="300dip"
                android:layout_height="150dip"
                android:background="@drawable/btn02_pre">

    <ImageView
        android:id="@+id/iv_cross"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/tvAlertTitle"
        style="@style/black_333333_15_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/tvAlertMsg"
        style="@style/black_333333_15_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="5dip"
        android:padding="14dp"/>

    <Button
        android:id="@+id/btAlert"
        style="@style/white_18_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:background="@drawable/btn02"
        android:text="@string/updated_immediately"/>

    <View
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="15dip"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>