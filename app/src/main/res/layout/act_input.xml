<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <include layout="@layout/top_title" />
    <TextView 
        android:id="@+id/input_top_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="13dp"
        android:text="输入提示：" />
    <com.nld.cloudpos.payment.view.MEditText
        android:id="@+id/input_money_et"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:background="@drawable/input01"
        style="@style/black_333333_18_left"
        android:layout_marginTop="5dp"
        android:inputType="number"
        android:singleLine="true"
        android:visibility="gone"
        android:hint="请输入金额" />
    <com.nld.cloudpos.payment.view.MEditText
        android:id="@+id/input_number_et"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:background="@drawable/input01"
        style="@style/black_333333_18_left"
        android:layout_marginTop="5dp"
        android:digits="123567890"
        android:inputType="number"
        android:singleLine="true"
        android:visibility="gone"
        android:hint="请输入激活码" />
    <com.nld.cloudpos.payment.view.MEditText
        android:id="@+id/input_psw_et"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:background="@drawable/input01"
        style="@style/black_333333_18_left"
        android:layout_marginTop="5dp"
        android:inputType="textPassword"
        android:singleLine="true"
        android:visibility="gone"
        android:hint="请输入密码" />
    <Button 
        android:id="@+id/input_confirm_bt"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="13dp"
        android:text="确认"
        style="@style/white_21_left"
        android:background="@drawable/btn01"/>

</LinearLayout>
