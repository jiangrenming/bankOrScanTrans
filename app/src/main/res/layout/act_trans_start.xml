<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/rl_container"
    android:background="@color/transparent_white"
    android:gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/loading_ll"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true" >

        <ImageView
            android:id="@+id/trans_start_imgview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/icon_wait" />

        <TextView
            android:id="@+id/trans_start_coutdowntime_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="65"
            android:textColor="@color/blue_00a1e2"
            android:textSize="17sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/trans_start_tip_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/loading_ll"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="正在处理中，请稍等"
        android:textColor="@color/blue_00a1e2"
        android:textSize="16sp" />

</RelativeLayout>